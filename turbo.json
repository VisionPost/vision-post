{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_BACKEND_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL", 
        "GITHUB_ID",
        "GITHUB_SECRET",
        "TWITTER_CLIENT_ID",
        "TWITTER_CLIENT_SECRET",
        "PORT",
        "OPENAI_API_KEY",
        "DATABASE_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_BACKEND_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "GITHUB_ID", 
        "GITHUB_SECRET",
        "TWITTER_CLIENT_ID",
        "TWITTER_CLIENT_SECRET",
        "PORT",
        "OPENAI_API_KEY",
        "DATABASE_URL"
      ]
    }
  }
}